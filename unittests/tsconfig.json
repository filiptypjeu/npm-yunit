{
    "extends": "../tsconfig.json",

    "references": [
        { "path": "../src" },
    ],

    "compilerOptions": {
        "rootDir": ".",
        "outDir": "../dist/unittests",
        "tsBuildInfoFile": "../dist/.tsbuildinfo_unittests",

        "paths": {
            "yunit": ["../dist/yunit"],
        },

        "experimentalDecorators": true,

        "noImplicitAny": false,
        "noUncheckedIndexedAccess": false,
    },
    "include": ["./**/*.ts"],
    "exclude": ["../node_modules", "../dist"],
}
