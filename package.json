{
    "name": "yunit",
    "version": "2.6.1",
    "description": "Test framework extended from xunit.ts.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -b src --verbose",
        "dev": "npm run build && npm run test:build && npm run test:run",
        "postversion": "git push && git push --tags",
        "preversion": "npm test",
        "test": "npm run test:build && npm run test:run",
        "test:build": "tsc -b unittests --verbose",
        "test:run": "cross-env NODE_PATH=dist node dist/unittests/index.js",
        "test-coverage": "npm run test:build && npm run test-coverage:run",
        "test-coverage:run": "nyc npm run test:run",
        "version": "git add -A src"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:filiptypjeu/npm-yunit.git"
    },
    "homepage": "https://github.com/filiptypjeu/npm-yunit",
    "author": "Filip Stenbacka",
    "license": "ISC",
    "dependencies": {
        "assert": "^2.0.0",
        "colors": "^1.4.0",
        "command-line-args": "^5.2.1",
        "xunit.ts": "^1.3.2"
    },
    "devDependencies": {
        "@types/assert": "^1.5.6",
        "@types/command-line-args": "^5.2.0",
        "@types/node": "^20.4.2",
        "cross-env": "^10.1.0",
        "nyc": "^17.1.0",
        "typescript": "^5.9.3"
    },
    "files": [
        "dist"
    ],
    "keywords": []
}
